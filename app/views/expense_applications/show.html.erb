<h1>ExpenseApplications#show</h1>
<ul>
  <% @expense_statement.expense_contents.each do |expense_content| %>
    <h3>申請一覧</h3>
    <li>id: <%= expense_content.id %></li>
    <li>発生日: <%= expense_content.account_date %></li>
    <li>利用期間: <%= expense_content.facility %></li>
    <li>片/往: <%= expense_content.round_trip %></li>
    <li>金額: <%= expense_content.amount %></li>
  <% end %>
</ul>
<% if @expense_statement.expense_approval.present? %>
  申請済み
<% else %>
  <%= link_to '編集', edit_expense_application_path(@expense_statement) %>
<% end %>
<%= link_to '削除', expense_application_path(@expense_statement), method: :delete, data: { confirm: "本当に削除しますか?" }%>